CC       := gcc
SRC      := $(wildcard *.c)
OBJ      := $(SRC:.c=.o)
NAME     := school
RM       := rm -f
CFLAGS   := -Wall -Werror -Wextra -pedantic
DEPS     := m.h

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c $(DEPS)
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) *~ $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
