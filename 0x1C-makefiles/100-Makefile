# 100-Makefile

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic


all: m.h $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

clean:
	$(RM) *~ $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean

re: oclean all

.PHONY: all clean oclean fclean re
