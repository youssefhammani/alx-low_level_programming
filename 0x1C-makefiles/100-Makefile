# 100-Makefile

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

clean:
	$(RM) *~ $(NAME) $(wildcard *.o)

oclean:
	$(RM) $(wildcard *.o)

fclean: clean
	$(RM) $(wildcard *.o)

re: oclean all
